//#version 100
/////////////////////////////////////////////////////////
//attribute
attribute vec2 gTexCoord;
/////////////////////////////////////////////////////////
//varying
varying vec2 gFragTexCoord;
/////////////////////////////////////////////////////////
//uniform
/////////////////////////////////////////////////////////
//vertex shader
void main()
{
	gFragTexCoord = gTexCoord;

	vec4 mPos = gTexCoord * vec2(2.0) - vec2(1.0);
	gl_Position = vec4(mPos, 0.0, 1.0);
}
